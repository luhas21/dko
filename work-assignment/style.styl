// Fonts

@font-face {
	font-family: 'frutiger';
	src: url('fonts/frutigerce.woff2') format('woff2'), url('fonts/frutigerce.woff') format('woff');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'frutiger-black';
	src: url('fonts/frutigerce-black.woff2') format('woff2'), url('fonts/frutigerce-black.woff') format('woff');
	font-weight: normal;
	font-style: normal;
}



// Variables

:root
	--black #000106
	--white #ffffff
	--red #C56675


// Base

html
	box-sizing border-box
*
*::before
*::after
	box-sizing inherit

img
	max-width 100%
	height auto




// Body

body
	background-color var(--white)
	font-family 'frutiger', sans-serif
	color var(--black)
	font-size 13.5px
	line-height 1.3
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-webkit-overflow-scrolling touch

.wrapper
	position relative
	max-width 1280px
	margin 0 auto
	padding 0 40px




// Typography & Components

h1, h2, h3, h4, h5
	font-family 'frutiger-black', sans-serif
	font-weight normal
	small
		display block

h1
	font-size 40px
h2
	font-size 32px
h3
	font-size 24px
strong
	font-family 'frutiger-black', sans-serif
	font-weight normal
a
	text-decoration none
	color currentColor
	&:hover
		text-decoration underline

hr
	border 0
	width 100%
	height 1px
	background-color currentColor
	margin 46px 0

// Category Image

.category-image
	text-align center
	align-self flex-end
	padding-bottom 8px
	span[class^='ico-']
		display block
		background none
		transform scale(1.75)
		transform-origin center bottom
		pointer-events none
	a
		display block
		font-size 19px
		font-family 'frutiger-black', sans-serif
		margin-top 24px
		padding 8px 12px
		&:hover
			text-decoration none

// Buy Button

.buy-button
	a
		transition color .3s
		white-space nowrap
		&::after
			content ''
			display inline-block
			vertical-align middle
			background url(icons/ico-kosik.svg) center no-repeat
			width 65px
			height 52px
			margin-left 12px
			transition filter .3s
		&:hover
			text-decoration none
			color var(--red)
			&::after
				filter invert(56%) sepia(17%) saturate(1586%) hue-rotate(302deg) brightness(84%) contrast(81%) // Match --red colour

