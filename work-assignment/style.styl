// Header

header
	margin-bottom 32px
	.header-banner
		background-color var(--black)
		color var(--white)
		font-family 'frutiger-black', sans-serif
		font-size 24px
		.wrapper
			max-width 1280px
			margin 0 auto
			display flex
			padding 16px
			& > *
				width 33.33%
			a
				display inline-block
				vertical-align middle
				color var(--white)
			.mail
				text-align center
			.phone
			.mail
			.facebook
			.messanger
			.instagram
				&::before
					display inline-block
					vertical-align middle
					content ''
					background-size 100%
					background-position center center
					background-repeat no-repeat
					width 40px
					height 40px
					margin-right 12px
			.phone::before
				background-image url(icons/phone.svg)
			.mail::before
				background-image url(icons/mail.svg)
			.social-links
				display flex
				justify-content space-between
				align-items center
				padding-left 2%
				.icons
					white-space nowrap
				.messanger
					&::before
						background-image url(icons/messanger.svg)
				.facebook
					&::before
						background-image url(icons/fb.svg)
				.instagram
					&::before
						background-image url(icons/ig.svg)
				.messanger
				.facebook
				.instagram
					transition opacity .3s
					&:hover
						opacity 0.7
			.icostrov
				text-transform uppercase
				margin-left 12px

	.header-main
		max-width 1740px
		margin 0 auto
		padding 0 16px
		display flex
		position relative
		.logo
			align-self flex-start
			text-decoration none
			padding 16px 0
			flex-shrink 0
			min-width 375px
			margin-right 32px
			span
				display block
				margin-top 16px
		.menu-wrapper
			width 100%
		nav
			font-family 'frutiger-black', sans-serif
			font-size 18px
			display flex
			justify-content space-between
			align-items center
			a
				display flex
				align-items center
				text-decoration none
				text-transform uppercase
				width 16.66%
				transition color .3s
				span[class^='ico-']
					margin-right 12px
					transition filter .3s
				span:not([class^='ico-'])
					display inline-block
					padding 8px 0
					margin-right 32px
					width 100%
					position relative
					&::after
						content ''
						width 0
						height 2px
						position absolute
						left 0
						bottom 0
						background-color var(--red)
						transition width .3s
				&.current
				&:hover
					color var(--red)
					span:not([class^='ico-'])
						flex-grow 1
						&::after
							width 100%
					span[class^='ico-']
						filter invert(56%) sepia(17%) saturate(1586%) hue-rotate(302deg) brightness(84%) contrast(81%) // Match --red colour
		.main-menu
			margin 32px 0
		.header-info
			padding 0px 16px
			border 1px solid currentColor
			margin-top 32px

		.category-image
			display none


// Footer

.intro + footer
	margin-top 0
	border 0

footer
	font-size 18px
	margin-top 32px
	border-top 1px solid currentColor
	padding 32px 0 64px
	.wrapper
		max-width 1740px
		margin 0 auto
		padding 0 16px
		display flex
	.footer-address
		display flex
		justify-content space-between
		font-size 17px
		width 35%
		p
			margin-top 0
			width calc(33.33% - 16px)
		a
			display block
			font-size 15px
			margin-top 32px
			color currentColor
	.footer-newsletter
		width 30%
		padding 0 16px
		h3
			text-transform uppercase
			margin-top 0
			font-size 18px
		p
			font-size 16px
		form
			margin-top 20px
		input
		button
			background-color var(--black)
			color var(--white)
			padding 8px
			font-family 'frutiger-black', sans-serif
			height 34px
			display inline-block
			vertical-align middle
		input
			font-size 14px
			width 200px
			margin-right 16px
		button
			font-size 16px
			padding-left 12px
			padding-right 12px
			transition background-color .3s
			&:hover
				background-color var(--red)
	.footer-menu
		width 35%
		a
			display inline-block
			font-family 'frutiger-black', sans-serif
			font-size 17px
			&:not(:last-child)
				margin-right 24px
				margin-bottom 12px
		img
			margin-top 8px



// Intro

.intro
	background-repeat no-repeat
	background-position center
	background-size cover
	padding 60px 0
	.intro-events
		display flex
		flex-wrap wrap
		max-width 1482px
		padding-left 16px
		padding-right 16px
		margin 0 auto
		.intro-events-item
			width 33.33%
			position relative
			padding-top 22%
			span[class^='ico-']
				position absolute
				z-index 1
				top 32px
				right 32px
				&.bottom
					top auto
					bottom 32px
				&::before
					transform scale(1.5)
					filter invert(100%)
			img
				display block
				position absolute
				left 0
				top 0
				width 100%
				height 100%
				object-fit cover
			.event-info
				position absolute
				left 0
				bottom 12px
				max-width calc(100% - 12px)
				background-color var(--white)
				padding 0 12px 12px
				font-size 17px
				h1
					font-size 17px
					text-transform uppercase
					white-space nowrap
					text-overflow ellipsis
					overflow hidden
					margin-bottom 0
				.date
					display block
					font-family 'frutiger-black', sans-serif
				.buy-ticket
					display inline-block
					margin-top 12px


// Main

.main
	display flex
	max-width 1740px
	margin 64px auto
	padding 0 16px
	overflow hidden
	.main-side
		min-width 375px
		margin-right 32px
		img
			width 100%

.entry-content
	max-width 1420px
	margin 0 auto
	:first-child
		margin-top 0
	h1, h2, h3
		margin-top 2em
	p
		font-size 22px
		&.small
			font-size 16px
	.float-left
		float left
		margin-right 32px
		margin-bottom 8px
	.float-right
		float right
		margin-left 32px
		margin-bottom 8px
	&::after
		content ''
		clear both
		display table


// Event Slider

.slider
	.image-wrapper
		position relative
		.event-info
			position absolute
			left 0
			bottom 46px
			max-width calc(100% - 12px)
			background-color var(--white)
			padding 0 12px 12px
			font-size 16px
			h1
				font-size 16px
				text-transform uppercase
				white-space nowrap
				text-overflow ellipsis
				overflow hidden
				margin-bottom 0
			.date
				display block
				font-family 'frutiger-black', sans-serif
			.buy-ticket
				display inline-block
				margin-top 12px
				font-size 16px

// Event List

.list
	margin 0 auto
	.list-item
		display flex
		&:not(:last-child)
			padding-bottom 32px
			margin-bottom 32px
			border-bottom 1px solid currentColor
		.image
			flex-shrink 0
			img
				width 210px
				height 160px
				object-fit cover
			.presale
				display block
		.text
			padding 0 32px
			flex-grow 1
			h2
				font-size 21px
				text-transform uppercase
				margin-top 0
				margin-bottom 8px
			a
				transition color .3s
				&:hover
					text-decoration none
					color var(--red)
			.event-info
				display block
				font-family 'frutiger-black', sans-serif
			.more-info
				text-decoration underline
				&:hover
					text-decoration none
					color var(--black)
		.category-image
			min-width 200px
			a
				background-color var(--black)
				color var(--white)
				transition background-color .3s
				&:hover
					background-color var(--red)
		.buy-button
			align-self flex-end
			min-width 200px
			font-size 24px
			padding-left 32px



// List ~ Not Events

.list.not-events
	max-width 1420px
	.image
		img
			width 240px
			height 161px
	.title
		min-width 220px
		max-width 220px
		margin-left 32px
		h2
			margin-top 0
		a
			transition color .3s
			&:hover
				text-decoration none
				color var(--red)
	.text p:first-child
		margin-top 8px
	.category-image
		span[class^='ico-']
			transform scale(2)
	.list-item
		.title h2
			font-size 24px
			small
				font-size 15px
		.title.big h2
			font-size 36px
			text-transform uppercase
		.text
			flex-grow 1
		.text.medium
			font-size 18px
			p:first-child
				margin-top 4px
		.text.big
			font-size 24px
			p:first-child
				margin-top 0

		&.toggle
			.text .text-toggle
				height 0
				overflow hidden
				font-size 13.5px
				.medium
					font-size 18px
				.big
					font-size 24px	
			&.opened .text .text-toggle
				height auto




// Event Detail

.event-detail
	display flex
	flex-wrap wrap
	.event-text
		width 70%
		width calc(100% - 375px - 32px)
		margin-right 32px
		h1
			font-size 30px
			text-transform uppercase
			margin-top 0
		.subtitle
			font-size 22px
			font-family 'frutiger-black', sans-serif
			margin-bottom 32px
		p
			font-size 21px
	.event-image
		width 375px
		img
			width 100%
	.event-bottom
		width 100%
		border-top 1px solid currentColor
		margin-top 32px
		padding-top 44px
		display flex
		min-height 200px
		.event-dates
			flex-grow 1
			.event-dates-item
				display flex
				align-items center
				width 100%
				&:not(:last-child)
					margin-bottom 12px
				.date
					flex-grow 1
					font-size 22px
					font-family 'frutiger-black', sans-serif
				.buy-button
					font-size 20px
					padding-left 32px
		.category-image
			width 35%
			align-self center
			padding-top 46px
			span[class^='ico-']
				transform scale(2)
			a
				text-transform uppercase
				font-size 29px
				margin-top 12px
				transition color .3s
				&:hover
					color var(--red)


// Calendar

.calendar
	margin-bottom 64px

.calendar-dummy
	width 100%
	padding-top 75%
	background-color #ffcc00




// Forms

::-webkit-input-placeholder
	color currentColor
	opacity 1
:-moz-placeholder
	color currentColor
	opacity 1
::-moz-placeholder
	color currentColor
	opacity 1
:-ms-input-placeholder
	color currentColor

::placeholder
	transition opacity .3s

:focus::placeholder
	opacity .25

input
textarea
:focus
	outline 0

label
	display block
	font-size 14px
	color currentColor
	margin-bottom 8px
	overflow hidden
	span
		float right
		color currentColor

input
textarea
	color var(--dark)
	padding 17px 16px
	overflow hidden
	text-overflow ellipsis
	border-radius 0
	border 1px solid currentColor
	appearance none

button
	border none